<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuizClient.Pages.ConnectPage">

    <Grid ColumnDefinitions ="*,*,*,*" RowDefinitions="0,*,*,*,*,*,*,*,*,*" RowSpacing="0" BackgroundColor="Black">
        <Label Grid.Row="1" Grid.ColumnSpan="4" TextColor="White" Text="MultiDeviceQuiz" FontSize="40" HorizontalOptions="Center" VerticalOptions="Center" ></Label>
        <Button x:Name="ConnectButton" Text="Connect" Grid.Row="6" Grid.ColumnSpan="4" Margin="10,10,10,10"></Button>
        <Entry x:Name="Username" Placeholder="Username" BackgroundColor="Gray" Grid.Row="7" Grid.ColumnSpan="4" Margin="15"></Entry>
        <Entry x:Name="IP" Placeholder="IPAddress" BackgroundColor="Gray" Grid.Row="8" Grid.ColumnSpan="4" Margin="15"></Entry>
    </Grid>

</ContentPage>
